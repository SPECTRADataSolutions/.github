{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/SPECTRADataSolutions/.github/contracts/orgStructureMetadata.json",
  "title": "SPECTRA Canonical Organizational Structure Metadata",
  "description": "Schema defining the hierarchy: Pillar → Domain → Repository",
  "type": "object",
  "properties": {
    "pillar": {
      "type": "string",
      "enum": [
        "Guidance",
        "Innovation", 
        "Engagement",
        "Operations",
        "Protection",
        "Sustenance",
        "Growth"
      ],
      "description": "High-level categorization of organizational capability"
    },
    "domain": {
      "type": "string",
      "pattern": "^[a-z][a-zA-Z]*$",
      "description": "Single-word camelCase domain pertinent to the pillar"
    },
    "repository": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9._-]+$",
      "description": "Repository name following GitHub naming conventions"
    }
  },
  "required": ["pillar", "domain", "repository"],
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": {
          "pillar": { "const": "Guidance" }
        }
      },
      "then": {
        "properties": {
          "domain": {
            "enum": [
              "governance",
              "standard",
              "structure",
              "intelligence"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "pillar": { "const": "Innovation" }
        }
      },
      "then": {
        "properties": {
          "domain": {
            "enum": [
              "research",
              "design",
              "architecture",
              "engineering"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "pillar": { "const": "Engagement" }
        }
      },
      "then": {
        "properties": {
          "domain": {
            "enum": [
              "brand",
              "marketing",
              "messaging",
              "media",
              "network",
              "developer"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "pillar": { "const": "Operations" }
        }
      },
      "then": {
        "properties": {
          "domain": {
            "enum": [
              "coordination",
              "schedule",
              "response",
              "delivery"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "pillar": { "const": "Protection" }
        }
      },
      "then": {
        "properties": {
          "domain": {
            "enum": [
              "security",
              "compliance",
              "risk",
              "safety",
              "ethic",
              "privacy"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "pillar": { "const": "Sustenance" }
        }
      },
      "then": {
        "properties": {
          "domain": {
            "enum": [
              "infrastructure",
              "platform",
              "pipeline",
              "reliability",
              "support",
              "maintenance"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "pillar": { "const": "Growth" }
        }
      },
      "then": {
        "properties": {
          "domain": {
            "enum": [
              "finance",
              "collaboration",
              "acquisition",
              "insight",
              "revenue"
            ]
          }
        }
      }
    }
  ]
}