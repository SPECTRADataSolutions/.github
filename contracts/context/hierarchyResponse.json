{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/SPECTRADataSolutions/.github/contracts/context/hierarchyResponse.json",
  "title": "SPECTRA Organisational Hierarchy Response Schema",
  "description": "Schema for responses from spectra.org.hierarchy endpoint with role-aware helpers",
  "type": "object",
  "properties": {
    "hierarchy": {
      "type": "object",
      "properties": {
        "dream": {
          "type": "string",
          "enum": ["SPECTRA"],
          "description": "Top level organisational vision"
        },
        "archetypes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "enum": ["Guidance", "Innovation", "Engagement", "Operations", "Protection", "Sustenance", "Growth"]
              },
              "description": {
                "type": "string",
                "description": "Description of the archetype's purpose"
              },
              "domains": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "pattern": "^[a-z][a-zA-Z]*$",
                      "description": "Domain name in camelCase"
                    },
                    "description": {
                      "type": "string",
                      "description": "Description of the domain's scope"
                    },
                    "repositories": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string",
                            "pattern": "^[a-zA-Z0-9._-]+$"
                          },
                          "description": {
                            "type": "string"
                          },
                          "url": {
                            "type": "string",
                            "pattern": "^https://github\\.com/[a-zA-Z0-9._-]+/[a-zA-Z0-9._-]+$"
                          },
                          "private": {
                            "type": "boolean",
                            "default": false
                          }
                        },
                        "required": ["name", "description", "url"],
                        "additionalProperties": false
                      }
                    }
                  },
                  "required": ["name", "description", "repositories"],
                  "additionalProperties": false
                }
              }
            },
            "required": ["name", "description", "domains"],
            "additionalProperties": false
          },
          "description": "Hierarchical structure of archetypes and domains"
        }
      },
      "required": ["dream", "archetypes"],
      "additionalProperties": false
    },
    "roles": {
      "type": "array",
      "description": "Organisational roles with hierarchy relationships",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z][a-zA-Z0-9]*$",
            "description": "Unique role identifier in camelCase"
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "description": "Human-readable role title"
          },
          "description": {
            "type": "string",
            "description": "Description of role responsibilities"
          },
          "level": {
            "type": "string",
            "enum": ["strategic", "tactical", "operational"],
            "description": "Organisational level of the role"
          },
          "archetypes": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["Guidance", "Innovation", "Engagement", "Operations", "Protection", "Sustenance", "Growth"]
            },
            "uniqueItems": true,
            "description": "Archetypes this role operates within"
          },
          "domains": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[a-z][a-zA-Z]*$"
            },
            "uniqueItems": true,
            "description": "Domains this role has responsibilities in"
          },
          "permissions": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["read", "write", "admin", "governance"]
            },
            "uniqueItems": true,
            "description": "Permissions associated with this role"
          },
          "reports": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[a-z][a-zA-Z0-9]*$"
            },
            "uniqueItems": true,
            "description": "Role IDs that report to this role"
          },
          "reportsTo": {
            "type": "string",
            "pattern": "^[a-z][a-zA-Z0-9]*$",
            "description": "Role ID this role reports to"
          }
        },
        "required": ["id", "title", "description", "level", "archetypes", "domains"],
        "additionalProperties": false
      }
    },
    "helpers": {
      "type": "object",
      "properties": {
        "rolesList": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z][a-zA-Z0-9]*$"
          },
          "description": "Simple list of all role IDs"
        },
        "findByTitle": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "string",
              "pattern": "^[a-z][a-zA-Z0-9]*$"
            }
          },
          "additionalProperties": false,
          "description": "Map of role titles to role IDs for lookup"
        },
        "pathTo": {
          "type": "object",
          "patternProperties": {
            "^[a-z][a-zA-Z0-9]*$": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[a-z][a-zA-Z0-9]*$"
              },
              "description": "Path from role to top-level through reporting hierarchy"
            }
          },
          "additionalProperties": false,
          "description": "Role hierarchy paths for each role ID"
        }
      },
      "required": ["rolesList", "findByTitle", "pathTo"],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "sourceRef": {
          "type": "string",
          "pattern": "^[a-f0-9]{40}$",
          "description": "Commit SHA of organisation/hierarchy.yaml source"
        },
        "lastUpdated": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(\\.[0-9]{3})?Z$",
          "description": "ISO 8601 timestamp of last hierarchy update"
        },
        "checksum": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 checksum of source hierarchy.yaml"
        },
        "version": {
          "type": "string",
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "Semantic version of hierarchy schema"
        }
      },
      "required": ["sourceRef", "lastUpdated", "checksum", "version"],
      "additionalProperties": false
    },
    "performance": {
      "type": "object",
      "properties": {
        "queryTimeMs": {
          "type": "integer",
          "minimum": 0,
          "description": "Query execution time in milliseconds"
        },
        "cacheHit": {
          "type": "boolean",
          "description": "Whether result was served from cache"
        },
        "rolesCount": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of roles in hierarchy"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["hierarchy", "roles", "helpers", "metadata"],
  "additionalProperties": false
}