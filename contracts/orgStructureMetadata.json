{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/SPECTRADataSolutions/.github/contracts/orgStructureMetadata.json",
  "title": "SPECTRA Canonical Organizational Structure Metadata",
  "description": "Schema defining the Spectrafied 7x7x7 hierarchy: Pillar → Domain → Capabilities → Repository",
  "type": "object",
  "properties": {
    "pillar": {
      "type": "string",
      "enum": [
        "Protection",
        "Guidance",
        "Growth",
        "Engagement",
        "Innovation",
        "Sustenance",
        "Execution"
      ],
      "description": "High-level categorization of organizational capability (7 Spectrafied pillars)"
    },
    "domain": {
      "type": "string",
      "pattern": "^[a-z][a-zA-Z]*$",
      "description": "Single-word camelCase domain pertinent to the pillar (7 domains per pillar)"
    },
    "capabilities": {
      "type": "string",
      "pattern": "^[a-z][a-zA-Z]*$",
      "description": "Single-word camelCase capabilities within the domain (7 capabilities per domain)"
    },
    "repository": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9._-]+$",
      "description": "Repository name following GitHub naming conventions"
    }
  },
  "required": ["pillar", "domain", "capabilities", "repository"],
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": {
          "pillar": { "const": "Protection" }
        }
      },
      "then": {
        "properties": {
          "domain": {
            "enum": [
              "security",
              "compliance",
              "privacy",
              "resilience",
              "risk",
              "safety",
              "assurance"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "pillar": { "const": "Guidance" }
        }
      },
      "then": {
        "properties": {
          "domain": {
            "enum": [
              "vision",
              "leadership",
              "navigation",
              "ethics",
              "governance",
              "alignment",
              "decision"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "pillar": { "const": "Growth" }
        }
      },
      "then": {
        "properties": {
          "domain": {
            "enum": [
              "learning",
              "scaling",
              "adaptation",
              "performance",
              "talent",
              "opportunity",
              "progression"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "pillar": { "const": "Engagement" }
        }
      },
      "then": {
        "properties": {
          "domain": {
            "enum": [
              "community",
              "communication",
              "partnerships",
              "participation",
              "culture",
              "reputation",
              "inclusion"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "pillar": { "const": "Innovation" }
        }
      },
      "then": {
        "properties": {
          "domain": {
            "enum": [
              "creativity",
              "research",
              "technology",
              "transformation",
              "design",
              "experimentation",
              "invention"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "pillar": { "const": "Sustenance" }
        }
      },
      "then": {
        "properties": {
          "domain": {
            "enum": [
              "resources",
              "energy",
              "provision",
              "maintenance",
              "logistics",
              "support",
              "capacity"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "pillar": { "const": "Execution" }
        }
      },
      "then": {
        "properties": {
          "domain": {
            "enum": [
              "process",
              "delivery",
              "operations",
              "precision",
              "efficiency",
              "method",
              "output"
            ]
          }
        }
      }
    }
  ]
}