{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/SPECTRADataSolutions/.github/contracts/context/anchor.json",
  "title": "SPECTRA Context Anchor Schema",
  "description": "Schema for context anchors served by the MCP server",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z][a-zA-Z0-9]*$",
      "description": "Unique anchor identifier in camelCase"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Human-readable anchor title"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1000,
      "description": "Detailed description of the anchor content"
    },
    "repository": {
      "type": "object",
      "properties": {
        "owner": {
          "type": "string",
          "enum": ["SPECTRADataSolutions"]
        },
        "name": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9._-]+$"
        },
        "ref": {
          "type": "string",
          "description": "Immutable commit SHA (required for production)"
        },
        "path": {
          "type": "string",
          "minLength": 1,
          "description": "File path within the repository"
        }
      },
      "required": ["owner", "name", "ref", "path"],
      "additionalProperties": false
    },
    "content": {
      "type": "object",
      "properties": {
        "mimeType": {
          "type": "string",
          "enum": [
            "text/plain",
            "text/markdown", 
            "application/json",
            "application/yaml",
            "text/yaml",
            "application/xml",
            "text/xml"
          ]
        },
        "sizeBytes": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10485760,
          "description": "Content size in bytes (max 10MB)"
        },
        "checksum": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 checksum for drift detection"
        },
        "encoding": {
          "type": "string",
          "enum": ["utf-8", "base64"],
          "default": "utf-8"
        }
      },
      "required": ["mimeType", "sizeBytes", "checksum"],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "dream": {
          "type": "string",
          "enum": ["SPECTRA"]
        },
        "archetype": {
          "type": "string",
          "enum": ["Guidance", "Innovation", "Engagement", "Operations", "Protection", "Sustenance", "Growth"]
        },
        "domain": {
          "type": "string",
          "pattern": "^[a-z][a-zA-Z]*$"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z][a-zA-Z0-9]*$"
          },
          "uniqueItems": true,
          "description": "Searchable tags in camelCase"
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "description": "Applicable organisational roles from hierarchy.yaml"
        }
      },
      "required": ["dream", "archetype", "domain"],
      "additionalProperties": false
    },
    "cache": {
      "type": "object",
      "properties": {
        "etag": {
          "type": "string",
          "description": "ETag for cache validation"
        },
        "lastModified": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(\\.[0-9]{3})?Z$",
          "description": "ISO 8601 timestamp of last modification"
        },
        "ttl": {
          "type": "integer",
          "minimum": 60,
          "description": "Cache time-to-live in seconds"
        }
      },
      "additionalProperties": false
    },
    "privacy": {
      "type": "object",
      "properties": {
        "redacted": {
          "type": "boolean",
          "default": false,
          "description": "Whether content was redacted for privacy"
        },
        "redactionCount": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of items redacted (for metrics)"
        },
        "isPrivateRepo": {
          "type": "boolean",
          "description": "Whether source repository is private"
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["id", "title", "description", "repository", "content", "metadata"],
  "additionalProperties": false
}